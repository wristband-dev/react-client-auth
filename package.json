{
  "name": "@wristband/react-client-auth",
  "description": "A lightweight React SDK that pairs with your backend server auth to initialize and sync frontend sessions via secure session cookies.",
  "author": "Wristband",
  "homepage": "https://wristband.dev",
  "version": "0.2.0",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wristband-dev/react-client-auth.git"
  },
  "bugs": {
    "email": "support@wristband.dev"
  },
  "engines": {
    "node": ">=18.12.1",
    "npm": ">=8.19.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p config/tsconfig.cjs.json",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:types": "tsc -p config/tsconfig.types.json",
    "clean": "rimraf dist",
    "package": "npm run build && npm pack",
    "prepublishOnly": "pinst --disable",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "react",
    "sdk",
    "multi-tenant",
    "multitenant",
    "auth",
    "authentication",
    "session",
    "oauth2",
    "oidc",
    "wristband",
    "b2b",
    "saas"
  ],
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "msw": "^2.7.4",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
